<h1 class="page-header", style="text-align: center">Pick Your Location</h1>
<h4 class="navbar-inner", style="text-align: center">And find your gear</h4>
<table class="table">
  <thead>
    <tr>
      <th style="text-align: center">City</th>
      <th style="text-align: center">State/Region</th>
      <th style="text-align: center">Country</th>
      <th style="text-align: center">Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.each do |location| %>
      <tr>
        <td style="text-align: center"><%= location.city %></td>
        <td style="text-align: center"><%= location.region %></td>
        <td style="text-align: center"><%= location.country %></td>
        <td style="text-align: center"><%= link_to 'Show', location_path(location) %></td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

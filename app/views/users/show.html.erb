<p><%=full_name%></p>

<p><%= email %></p>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>


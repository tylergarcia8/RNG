<div class="full-screen">
  <div class="box">
    <h1 class="header">Log in</h1>
    <div class="content">
      
      <%= form_tag sessions_path, :id => "login-form" do %>
        <div class="field">
        	<%= label_tag :email %><br>
			<%= text_field_tag :email%>
        </div>
        
        <div class="field">
        	<%= label_tag :password %><br>
			<%= password_field_tag :password %>
        </div>
        
       <div class="actions">
			<%= submit_tag "Log In" %>
		</div>
      <% end %>      
    </div>
  </div>
</div>